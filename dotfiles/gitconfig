[user]
	name = Jo√£o Britto
[core]
	excludesfile = ~/.gitignore
[alias]
	aliases = config --get-regexp alias
	st = status
	ci = commit
	co = checkout
	d = diff --word-diff=color
	ds = diff --word-diff=color --staged
	df = diff
	dfs = diff --staged
	br = branch
	pl = pull
	ps = push
	fix = commit --amend -C HEAD
	ri = rebase -i
	rc = rebase --continue
	ra = rebase --abort
	a = add -A
	save = !git add -A && git commit -m wip
	edit = reset --soft HEAD^
	m = merge --no-edit
	rank = shortlog -sn --no-merges
	week = shortlog --since=last_week
	lc = log --decorate --graph --oneline --abbrev-commit
	la = log --decorate --graph --oneline --abbrev-commit --all
	implode = !sh -c 'git remote prune origin && git clean -dxf && git stash clear && git gc' -
	rmb = !sh -c 'git branch -d $1 && git push origin :$1' -
	shorten = !sh -c 'curl -i http://git.io -F url=https://github.com/$1 -F code=$2' -
	me = config --unset user.email
	last-tag = describe --tags
	pr = !sh -c 'git log --merges --ancestry-path --oneline $1..master | tail -n 1' -
[color]
	ui = auto
[fetch]
	prune = true
[pull]
	rebase = true
[push]
	default = current
[merge]
	ff = false
	tool = p4merge
[rerere]
	enabled = 1
[diff]
	renames = copies
	algorithm = minimal
[help]
	autocorrect = -1
[sendemail]
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	smtpencryption = tls
	chainreplyto = false
[credential]
	helper = /opt/boxen/bin/boxen-git-credential
[mergetool "p4merge"]
	cmd = $HOME/Applications/p4merge.app/Contents/MacOS/p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
	keepBackup = false
	keepTemporaries = false
