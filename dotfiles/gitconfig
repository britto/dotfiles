[user]
	name = Jo√£o Britto
[core]
	pager = less -+$LESS -RS
	excludesfile = ~/.gitignore
[alias]
	aliases = config --get-regexp alias
	st = status
	ci = commit
	co = checkout
	df = diff
	br = branch
	pl = pull
	ps = push
	fix = commit --amend -C HEAD
	ri = rebase -i
	rc = rebase --continue
	ra = rebase --abort
	save = !git add -A && git commit -m wip
	edit = reset --soft HEAD^
	m = merge --no-edit
	rank = shortlog -sn --no-merges
	week = shortlog --since=last_week
	implode = !sh -c 'git remote prune origin && git clean -dxf && git stash clear && git gc' -
	rmb = !sh -c 'git branch -d $1 && git push origin :$1' -
	shorten = !sh -c 'curl -i http://git.io -F url=https://github.com/$1 -F code=$2' -
	me = config --unset user.email
	last-tag = describe --tags
[color]
	ui = auto
[pull]
	rebase = true
[push]
	default = current
[merge]
	ff = false
[diff]
	renames = copies
[help]
	autocorrect = -1
[sendemail]
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	smtpencryption = tls
	chainreplyto = false
[credential]
	helper = /opt/boxen/bin/boxen-git-credential

[hub]
	protocol = https
